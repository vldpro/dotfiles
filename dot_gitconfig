[core]
	editor = vim

[alias]
    please = push --force-with-lease
	fx = ci -m "fix"
	ph = push -u origin HEAD
	pf = push -fu origin HEAD
	st = status --short
	co = checkout
	ci = commit -v
	br = branch
	lg = log --graph --abbrev-commit --pretty=short   
	undo = reset --soft $(git log --format=%H -2 | tail -1)
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
